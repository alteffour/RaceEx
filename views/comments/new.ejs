<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h3 style="text-align:center;">Add a new comment to <%=car.name%></h3>
        <div style="width:30%; margin:25px auto;">
            <form action="/cars/<%=car._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type='text' placeholder="text" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Next</button>
                </div>
            </form>
            <a href="/cars"> Go back</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>