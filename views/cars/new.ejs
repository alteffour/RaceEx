<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h3 style="text-align:center;">Enter your Car information below</h3>
        <div style="width:30%; margin:25px auto;">
            <form action="/cars" method="POST">
                <div class="form-group">
                    <input class="form-control" type='text' placeholder="Car name" name="newCar">
                </div>
                <div class="form-group">
                    <input class="form-control" type='number' placeholder="Price" name="price" min="399.00" step="1.00">
                </div>
                <div class="form-group">
                    <input class="form-control" type='text' placeholder="Image url" name="newImage">    
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="Description" name="descr"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Next</button>
                </div>
            </form>
            <a href="/cars"> Go back</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>